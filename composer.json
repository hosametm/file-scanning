{
    "name": "hosametm/file-scanning",
    "description": "A Laravel package for secure file scanning and validation",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "file", "scanning", "validation", "security", "mime-type"],
    "homepage": "https://github.com/hosametm/file-scanning",
    "support": {
        "issues": "https://github.com/hosametm/file-scanning/issues",
        "source": "https://github.com/hosametm/file-scanning"
    },
    "autoload": {
        "psr-4": {
            "Hosametm\\FileScanning\\": "src/"
        }
    },
    "authors": [
        {
            "name": "hosametm",
            "email": "hosammetman@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9.0|^10.0",
        "symfony/mime": "^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0",
        "phpunit/phpunit": "^9.5|^10.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hosametm\\FileScanning\\FileScannerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
